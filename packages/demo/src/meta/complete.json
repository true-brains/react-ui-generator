{
  "fields": [
    {
      "id": "email",
      "renderer": {
        "type": "text",
        "config": {
          "label": "E-mail",
          "placeholder": "Enter your e-mail"
        }
      },
      "serializer": "auth.email",
      "hidden": false
    },

    {
      "id": "password",
      "renderer": "text",
      "serializer": "auth.password"
    },

    {
      "id": "confirmation",
      "renderer": "text",
      "serializer": null
    },

    {
      "id": "aboutMe",
      "renderer": {
        "type": "textarea",
        "config": {
          "label": "Short bio",
          "placeholder": "Tell us about you...",
          "rows": 5
        }
      },
      "hidden": false
    },

    {
      "id": "btnSend",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Send",
          "mode": "dark"
        }
      },
      "actions": {
        "onClick": "sendForm"
      }
    },

    {
      "id": "btnClear",
      "renderer": {
        "type": "button",
        "config": {
          "title": "Clear",
          "mode": "outline-dark"
        }
      },
      "actions": {
        "onClick": "clearForm"
      }
    }
  ]
}
